<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ResetPasswordFragment"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the recieved OTP below:"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_margin="20dp"/>


    <EditText
        android:textStyle="bold"
        android:maxLength="4"
        android:id="@+id/etOtp"
        android:layout_below="@id/txtHead"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/login_edit_text"
        android:backgroundTint="#ffffff"
        android:textSize="15sp"
        android:inputType="number"
        android:hint="OTP(4 characters)"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

        <EditText
            android:textStyle="bold"
            android:id="@+id/etNewPassword"
            android:layout_below="@id/etOtp"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/login_edit_text"
            android:backgroundTint="#ffffff"
            android:textSize="15sp"
            android:hint="New Password(Min. 4 Characters)"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:textStyle="bold"
            android:id="@+id/etConfPassword"
            android:layout_below="@id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/login_edit_text"
            android:backgroundTint="#ffffff"
            android:textSize="15sp"
            android:hint="Confirm Password"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etConfPassword"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:backgroundTint="#000000"
        android:background="@drawable/login_edit_text"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="30dp"/>


    </RelativeLayout>

</FrameLayout>